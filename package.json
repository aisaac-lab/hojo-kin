{
  "name": "subsidy-search-mvp",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix build",
    "build:production": "pnpm run setup:production && remix build",
    "dev": "remix dev --manual",
    "start": "bash bin/start-production.sh",
    "start:dev": "node server.js",
    "setup:production": "tsx scripts/setup-production.ts",
    "start:remix": "remix-serve ./build/index.js",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc",
    "setup": "pnpm run db:init && pnpm run assistant:create",
    "db:init": "tsx scripts/init-db.ts",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:migrate": "tsx scripts/migrate-db.ts",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx scripts/sync-subsidies.ts",
    "turso:setup": "tsx scripts/setup-turso.ts",
    "turso:migrate": "tsx scripts/migrate-turso.ts",
    "assistant:create": "tsx scripts/create-assistant.ts",
    "sync:subsidies": "tsx scripts/sync-subsidies.ts",
    "mcp:start": "tsx src/mcp/server.ts",
    "cli": "tsx src/cli/index.ts"
  },
  "dependencies": {
    "@libsql/client": "^0.4.3",
    "@remix-run/css-bundle": "^2.4.0",
    "@sparticuz/chromium-min": "^138.0.2",
    "@tailwindcss/typography": "^0.5.16",
    "compression": "^1.8.1",
